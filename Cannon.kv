#:kivy 1.0.9


<Bullet>:
    size: 10, 10
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<Obstacle>:
    size: 100, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'stone_texture.png'

<Laser>:
    size: 20, 2000
    pos: 300, 300
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: 400, 300
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<Game>:
    ball: pong_ball

    Bullet:
        id: pong_ball

    Button:
        id: start_button
        text: 'Start'
        pos: self.pos
        on_release: root.startGame()
        on_press: root.addObstacles(pos = (800, 500), object_id = 1, n_of_obstacles_x = 10, n_of_obstacles_y = 30)
        center_x: root.width / 2
        center_y: root.height / 2

    Button:
        id: change_weapon_laser
        size: 50, 50
        text: "Laser"
        on_release: root.change_weapon("laser")
        center_x: 10 + self.width
        center_y: root.height - 10 - self.height

    Button:
        id: change_weapon_bullet
        size: 50, 50
        text: "Bullet"
        on_release: root.change_weapon("bullet")
        center_x: 10 + 2 * self.width
        center_y: root.height - 10 - self.height

    Button:
        id: change_weapon_bullet
        size: 50, 50
        text: "Bomb"
        on_release: root.change_weapon("bomb")
        center_x: 10 + 3 * self.width
        center_y: root.height - 10 - self.height

    Label:
        id: score_label
        size: 50, 50
        center_x: 10 + 5 * self.width
        center_y: root.height - 10 - self.height