#:kivy 1.0.9


<PongBall>:
    size: 30, 30
    canvas:
        Color:
            rgba: 255, 0, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size

<Obstacle>:
    size: 50, 50
    canvas:
        Color:
            rgba: 255, 255, 255, 1
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    pos: 500, 500
    ball: pong_ball
    obstacle1: rectangle_obstacle

    PongBall:
        id: pong_ball
        center: self.parent.center

    Button:
        id: start_button
        text: 'Start'
        pos: self.pos
        on_release: root.startGame()
        on_press: root.addObstacles()
        on_state: print("my current state is {}".format(self.state))
        center_x: root.width / 2
        center_y: root.height / 2

    Obstacle:
        id: rectangle_obstacle
        x: 600
        y: 600