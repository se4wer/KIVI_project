#:kivy 1.0.9


<PongBall>:
    size: 30, 30
    canvas:
        Color:
            rgba: 255, 0, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size

<Obstacle>:
    size: 100, 200
    canvas:
        Color:
            rgba: 255, 255, 255, 1
        Rectangle:
            pos: self.pos
            size: self.size

<PongGame>:
    ball: pong_ball

    PongBall:
        id: pong_ball

    Button:
        id: start_button
        text: 'Start'
        pos: self.pos
        on_release: root.startGame()
        on_press: root.addObstacles(pos = (800, 500), object_id = 1, n_of_obstacles = 10)
        center_x: root.width / 2
        center_y: root.height / 2